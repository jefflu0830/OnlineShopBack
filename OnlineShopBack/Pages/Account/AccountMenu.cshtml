@page
@model OnlineShopBack.Pages.Account.AccountMenuModel
@{
    ViewData["Title"] = "帳號管理";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<div id="body" style="margin: 5px auto;">

    <button id="AddAccount">新增帳號</button>

    <button id="AddAccountLevel">新增權限</button>

</div>
<div style="margin:15px">
    @*搜尋：
        <input id="Search" type="search" class="light-table-filter" data-table="order-table" placeholder="請輸入關鍵字">*@
    搜尋：
    <input id="Search" oninput="AccountMenufun.AccListSerch()">
    <select id="SearchClass" onchange="AccountMenufun.AccListSerch()">
        <option value="f_id">Id</option>
        <option value="f_acc">帳號</option>
        <option value="f_accPosition">權限</option>
        <option value="f_createDate">創建時間</option>
    </select>
</div>
<div style="margin:15px">
    排序:
    <select id="OrderClass" onchange="AccountMenufun.AccListOrder(this.value)">
        <option value="0">Id(小->大)</option>
        <option value="1">Id(大->小)</option>
        <option value="2">帳號(小->大)</option>
        <option value="3">帳號(大->小)</option>
        <option value="4">權限(小->大)</option>
        <option value="5">權限(大->小)</option>
        <option value="6">創建時間(小->大)</option>
        <option value="7">創建時間(大->小)</option>
    </select>
</div>
<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-bordered order-table" id="Table">
            <thead>
                <tr class="Tbheader" id="Tbheader">
                    <th id="f_id">ID</th>
                    <th id="f_acc">帳號</th>
                    <th id="f_accPosition">權限</th>
                    <th id="f_createDate">創建時間</th>
                </tr>
            </thead>
            <tbody id="TableBody">
            </tbody>
        </table>
    </div>
</div>
<div id="EditBox" style="border: solid 2px; padding: 5px; display: none; position:relative; z-index:99; ">
    <form id="Editform" method="post" action="">
    </form>
</div>

<script src="~/js/Account/AccountMenu.js"></script>

<script id="getSelect">
    //取得權限下拉選單資料
    window.accLevel = "@Html.Raw(Model.AccLevel)".split('/');
    window.accPosition = "@Html.Raw(Model.AccPosition)".split('/');
    $("#getSelect").remove();    
</script>

