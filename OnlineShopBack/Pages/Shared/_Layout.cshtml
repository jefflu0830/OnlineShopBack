<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShopBack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @{ if (!string.IsNullOrWhiteSpace(Accessor.HttpContext.Session.GetString("Account")))
                    {
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="navbar-nav flex-grow-1">

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                                </li>


                                <li class="nav-item">
                                    <a id="logOut" class="nav-link text-dark " style="cursor:pointer">LogOut</a>
                                </li>



                            </ul>
                        </div>

                        <div class="navbar-collapse collapse d-sm-inline-flex ">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <label class="nav-link text-dark">登入者: @Accessor.HttpContext.Session.GetString("Account") </label>
                                </li>
                                <li class="nav-item">
                                    <label class="nav-link text-dark">職位: @Accessor.HttpContext.Session.GetString("AccPosition") </label>
                                </li>
                            </ul>
                        </div>
                    }
                }
            </div>

        </nav>
    </header>
    <div class="container" @*style="width:1000px;"*@>
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - OnlineShopBack - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/LayOut.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
